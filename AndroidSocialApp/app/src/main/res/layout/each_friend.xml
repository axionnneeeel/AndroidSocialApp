<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout android:id="@+id/relative_layout"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_alignParentBottom="true"
    android:paddingStart="5dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/friend_avatar"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginStart="15dp">

    </ImageView>

    <LinearLayout
        android:id="@+id/panel"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="20dp"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/friend_avatar"
        android:paddingTop="5dp">

        <TextView
            android:id="@+id/friend_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="ciobanurazvand"
            android:textColor="@color/colorPrimary"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/friend_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Offline"
            android:textAllCaps="false"
            android:textColor="#FF0000"
            android:textSize="12dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_toEndOf="@+id/panel"
        android:gravity="right"
        android:paddingTop="15dp">
        <ImageView
            android:id="@+id/delete_friend"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:src="@drawable/ic_close_brown_24dp"
            android:layout_marginRight="25dp"/>
        <ImageView
            android:id="@+id/chat"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:src="@drawable/ic_sms_brown_24dp"
            android:layout_marginEnd="20dp"/>
    </LinearLayout>
</RelativeLayout>